{
  "name": "earclip",
  "version": "0.9.8",
  "description": "Triangle mesh designed to be fast, efficient, and sphere capable.",
  "type": "module",
  "keywords": [
    "tesselate",
    "mesh",
    "triangle mesh",
    "S2"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "directories": {
    "lib": "dist"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typescript": {
    "main": "src/index.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint+build+test": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "rm -rf dist && mkdir dist && rm -f -- tsconfig.tsbuildinfo && tsc",
    "types:bundle": "npm run types:build && node scripts/types.mjs",
    "prepublish": "pnpm run lint+build+test",
    "package-check": "package-check",
    "test": "tape test/**/*.test.js | tap-summary"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/S2-Maps/earclip.git"
  },
  "author": "Craig OConnor",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/S2-Maps/earclip/issues"
  },
  "homepage": "https://github.com/S2-Maps/earclip#readme",
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/node": "^17.0.35",
    "@typescript-eslint/parser": "^4.0.0",
    "es-abstract": "^1.21.2",
    "eslint": "^8.44.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "tap-summary": "^4.0.0",
    "tape": "^5.6.4",
    "ts-standard": "*",
    "typescript": "^5.1.6"
  }
}
